<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnBackground">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <style name="toolbarStyle">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorOnBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIcon">@drawable/ic_navigate</item>
    </style>

</resources>
